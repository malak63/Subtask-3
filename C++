# Inventory Logging System for Big Wig Electronics
# This program logs multiple inventory items and marks large orders (> R500)

def log_inventory_entry():
    """Function to log a single inventory entry"""
    
    # Get user input for product details
    product_name = input("Enter product name: ")
    quantity = int(input("Enter quantity received: "))
    supplier = input("Enter supplier name: ")
    cost_per_unit = float(input("Enter cost per unit (R): "))
    
    # Calculate total cost
    total_cost = quantity * cost_per_unit
    
    # Format total cost to 2 decimal places
    total_cost_formatted = f"{total_cost:.2f}"
    
    # Check if it's a large order (over R500)
    large_order_note = " (Large Order)" if total_cost > 500 else ""
    
    # Create the log entry
    log_entry = f"Product: {product_name}, Quantity: {quantity}, Supplier: {supplier}, Total Cost: R{total_cost_formatted}{large_order_note}"
    
    # Display the entry
    print("\n" + "-" * 50)
    print("INVENTORY LOG ENTRY:")
    print(log_entry)
    print("-" * 50)
    
    # Save to file
    with open("inventory_log.txt", "a") as file:
        file.write(log_entry + "\n")
    
    print("\nâœ“ Entry has been saved to inventory_log.txt")
    
    # Display binary representation of total cost
    binary_total = bin(int(total_cost))
    print(f"Binary representation of total cost: {binary_total}")
    
    return True

def main():
    print("=" * 50)
    print("BIG WIG ELECTRONICS - INVENTORY LOGGING SYSTEM")
    print("=" * 50)
    
    while True:
        print("\n--- New Inventory Entry ---")
        log_inventory_entry()
        
        # Ask if user wants to add another entry
        another = input("\nAdd another entry? (y/n): ").lower()
        if another != 'y':
            break
    
    print("\n" + "=" * 50)
    print("Thank you for using the Inventory Logging System!")
    print("=" * 50)

if __name__ == "__main__":
    main()
